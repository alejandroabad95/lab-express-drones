<div class="container">

    <div class="row">

        <h2>Available drones</h2>

        {{#each drones}}

        <div class="col-6">

            <h4>{{name}}</h4>
            <a href="/drones/{{_id}}/edit">Edit</a>

        </div>

        <div class="col-6">

            <p>Propellers: {{propellers}}</p>
            <p>Speed: {{maxSpeed}}</p>


            <form action="/drones/{{_id}}/delete" method="POST" class="btn btn-danger">
                <input type="submit" value="Delete" class="btn btn-danger p-0" />
            </form>

        </div>

        {{/each}}

    </div>

</div>