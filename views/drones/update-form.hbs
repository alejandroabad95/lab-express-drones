{{!-- The update-form.hbs should have the pre-filled form with the values of the previously passed drone object. --}}

<h1 class=" mt-5 mb-5">Update {{name}}</h1>

<div class="container">

    <div class="row">

        <form action="/drones/{{_id}}/edit" method="POST">
            <div class="mb-3">
                <label for="name">Name:</label>
                <input type="text" id="title" name="title" value="{{name}}">
            </div>

            <div class="mb-3">
                <label for="propellers">Propellers:</label>
                <input type="number" id="propellers" name="propellers" value={{propellers}}>
            </div>

            <div class="mb-3">
                <label for="maxSpeed">maxSpeed:</label>
                <input type="number" id="maxSpeed" name="maxSpeed" value={{maxSpeed}}>
            </div>

            <div class="d-grid">
                <button type="submit" class="btn btn-dark">Edit</button>
            </div>
        </form>
    </div>

</div>