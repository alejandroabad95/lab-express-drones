<h2>Create a new drone</h2>

<div class="container">

    <form action="/drones/create" method="POST">
        <div class="mb-3">
            <label for="name" class="form-label">Name</label>
            <input type="text" class="form-control" id="name" name="name">
        </div>

        <div class="mb-3">
            <label for="propellers" class="form-label">Number of propellers</label>
            <input type="number" class="form-control" id="propellers" name="propellers">
        </div>

        <div class="mb-3">
            <label for="Max Speed" class="form-label">Max Speed</label>
            <input type="number" class="form-control" id="Max Speed" name="Max Speed">
        </div>
        <div class="d-grid">
            <button type="submit" class="btn btn-dark">Create drone</button>
        </div>

    </form>

</div>